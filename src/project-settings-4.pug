doctype html
html(lang='ru')

    include includes/head.pug

    body

        include includes/header.pug

        main.project-settings
            .container.project-settings__container
                aside.project-settings__aside
                    .project-tip.project-settings__aside-project-tip
                        picture.img-cover.project-tip__picture
                            img(src="img/project-ava.jpg", alt="Опыт развития форм деятельности").project-tip__img
                        .project-tip__content
                            .text-overflow.project-tip__name Опыт развития форм деятельности
                            a(href="#").project-tip__prev-link вернуться к проекту
                    nav(role="navigation").nav-step.nav-step--mobile-scroll.project-settings__aside-nav
                        ul.nav-step__list
                            li.nav-step__item
                                a(href="project-settings-1.html").nav-step__link Донаты
                            li.nav-step__item
                                a(href="project-settings-2.html").nav-step__link Основное
                            li.nav-step__item
                                a(href="project-settings-3.html").nav-step__link Изображения
                            li.nav-step__item
                                a(href="project-settings-4.html").nav-step__link.is-active Описание
                            li.nav-step__item
                                a(href="project-settings-5.html").nav-step__link Ссылки
                            li.nav-step__item
                                a(href="project-settings-6.html").nav-step__link Виджеты
                            li.nav-step__item
                                a(href="project-settings-7.html").nav-step__link Подписчики
                section.project-settings__main
                    h1.project-settings__main-title Описание
                    form(action="#").project-settings__main-form
                        .input-block.n-new-project__main-form__area-new
                            label(for="n-new-project-description").input-block__label
                                span.input-block__label-name Краткое описание *
                                span.input-block__label-description Будет представлять карточку проекта в ленте рекомендаций, списках и на странице проекта
                            .input-block__textarea-wrapper
                                textarea(type="text", name="", id="n-new-project-description", rows="", cols="", maxlength="160" placeholder="Максимум 160 символов с пробелами").input-el.input-el--textarea.input-el--textarea-size-md.input-block__el
                                .input-block__textarea-counter 0/160
                        .input-block.n-new-project__main-form__area-new
                            label(for="n-new-project-description").input-block__label
                                span.input-block__label-name Полное описание *
                                span.input-block__label-description Расскажите, почему вы решили создать этот проект, как возникла идея и зачем вам нужна поддержка. Форматы для загружаемых изображений: JPEG, PNG, BMP или GIF
                            .e-editor.input-block__editor
                                img(src="img/editor.jpg").e-editor__img

                        .group-btns.n-new-project__main-form-btns
                            button(type="submit").btn.btn--size-sm.btn-green.group-btns__item Сохранить изменения
                            button(type="button").btn.btn--size-sm.btn-simple.group-btns__item Предпросмотр

        include includes/footer.pug