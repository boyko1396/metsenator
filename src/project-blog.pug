doctype html
html(lang='ru')

    include includes/head.pug

    body

        include includes/header.pug  

        main.project
            .container         
                section.project-header            
                    .project-header-img
                        img(src="img/project-ava.jpg", alt="")
                    .project-header-block 
                        .project-header-ttl Опыт развития форм деятельности
                        .project-header-subs.header-info-subs 
                            span.project-header-subs-num.header-info-subs-num 270&nbsp;
                            span подписчиков

            section.project-main
                .container 
                    .project-main-wrap 
                        .project-main-media-wrap
                            .project-main-media
                                img(src="img/post.jpg", alt="")
                        .project-main-info
                            .project-main-info-amount
                                span.project-main-amount-summ 5256&nbsp;
                                span ₽&nbsp;
                                span собрано
                            .project-main-info-subs
                                span.project-main-info-subs-num 15&nbsp;
                                span человек поддержали
                            .project-main-info-text Потребительская культура требовальна к креативу. Инвестиция усиливает поведенческий таргетинг. Ценовая стратегия спонтанно программирует комплексный поведенческий таргетинг.
                            .group-btns.project-main-info-btns
                                button(type="button").btn.btn--size-sm.btn-green.group-btns__item Поддержать
                                button(type="button").btn.btn--size-sm.btn-trp.group-btns__item Управление
                            .city-label.city-label--theme-dark.project-main-info-city
                                svg.u-icon.city-label__icon
                                    use(xlink:href="img/sprite.svg#map-marker")
                                | Сургут, Россия
                            .project-main-info-footer
                                span Опубликован&nbsp;
                                span.project-main-info-date 2 недели назад

            section.project-tabs
                .container
                    .project-tabs-wrap
                        .project-tabs-overflow
                            .project-tabs-nav
                                .project-tabs-tab.active
                                    span О&nbsp;прoекте
                                .project-tabs-tab
                                    span Блог&nbsp;
                                    span.project-tabs-tab-count 7
                                .project-tabs-tab
                                    span Поддержали&nbsp;
                                    span.project-tabs-tab-count 15
                                .project-tabs-tab.mobile
                                    span Ещё
                        .l-project-tabs-buttons
                            a(href="#").btn.btn-trp.btn--size-lt.l-project-tabs-buttons__item Подписаться
                            .share-el.l-project-tabs-buttons__item
                                button(type="button").js-share-btn.share-el__btn
                                    svg.u-icon.share-el__btn-icon
                                        use(xlink:href="img/sprite.svg#share")
                                .share-el__dropdown
                                    .share-el__dropdown-body
                                        button(type="button").share-el__item.share-el__item--vk
                                            svg.u-icon.share-el__item-icon
                                                use(xlink:href="img/sprite.svg#vk-social")
                                            .share-el__item-title Вконтакте
                                        button(type="button").share-el__item.share-el__item--telegram
                                            svg.u-icon.share-el__item-icon
                                                use(xlink:href="img/sprite.svg#telegram-social")
                                            .share-el__item-title Telegram
                                        button(type="button").js-share-copylink.share-el__item.share-el__item--copy-link
                                            svg.u-icon.share-el__item-icon
                                                use(xlink:href="img/sprite.svg#copy-link")
                                            .share-el__item-title Копировать ссылку
                                        button(type="button").js-share-qrcode.share-el__item.share-el__item--qrcode
                                            svg.u-icon.share-el__item-icon
                                                use(xlink:href="img/sprite.svg#qrcode")
                                            .share-el__item-title QR-код
                                        button(type="button").share-el__dropdown-cancel Отменить
                                    .share-el__dropdown-qrcode
                                        .share-el__dropdown-qrcode-title QR-код проекта
                                        .share-el__dropdown-qrcode-body
                                            img(src="img/qrcode.svg")
                                        a(href="https://www.google.com/", target="_blank").btn.btn-trp.btn--size-lt.share-el__dropdown-qrcode-btn Скачать

            section.project-content
                .container
                    .project-content-wrap
                        .project-content-inner.project-blog
                            .project-blog-post
                                .project-blog-img
                                    img(src="img/project.jpg", alt="")
                                .project-blog-ttl Связанный имидж: методология и особенности
                                .project-blog-text.lines-3 Равным образом постоянный количественный рост и сфера нашей активности требуют от нас анализа дальнейших направлений развития. Задача организации, в особенности же начало повседневной работы по формированию позиции способcnetn фиг знает какому результату
                                .project-blog-footer
                                    .likes-group
                                        .likes-like
                                            img.svg-inline(src="img/like.svg", alt="")
                                        .likes-count 0
                                        .likes-dislike
                                            img.svg-inline(src="img/dislike.svg", alt="")
                                    .project-blog-time 3 часа назад
                            .project-blog-post
                                .project-blog-ttl Формировании дальнейших направлений развития
                                .project-blog-text.lines-6 Таким образом рамки и место обучения кадров играет важную роль в формировании дальнейших направлений развития. Равным образом постоянное информационно-пропагандистское обеспечение нашей деятельности способствует подготовки и реализации систем массового участия. Повседневная практика показывает, что новая модель организационной деятельности позволяет выполнять важные задания по разработке форм развития. Повседневная практика показывать что-то там кому-то там
                                .project-blog-footer
                                    .likes-group
                                        .likes-like
                                            img.svg-inline(src="img/like.svg", alt="")
                                        .likes-count 0
                                        .likes-dislike
                                            img.svg-inline(src="img/dislike.svg", alt="")
                                    .project-blog-time 4 часа назад

