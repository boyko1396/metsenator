header.header
    .container-large.header__container
        button(type="button").js-header-menu-mobile.header__toggle
            span.header__toggle-line
            span.header__toggle-line
            span.header__toggle-line
        .header__logo
            a(href="/").header__logo-link.header__logo-link--russia
                img(src="img/logo-russia.svg", alt="Аппора")
            a(href="http://uppora.org/users/1/projects/7/news_posts/5").header__logo-beta beta
        .header__menu
            nav(role="navigation").header-nav.header__nav
                ul.header-nav__list
                    li.header-nav__item
                        a(href="#").header-nav__link О платформе
                    li.header-nav__item
                        a(href="#").header-nav__link Проекты
                    li.header-nav__item
                        a(href="#").header-nav__link Авторам
                    li.header-nav__item
                        a(href="#").header-nav__link СМИ о нас
                    li.header-nav__item
                        a(href="#").header-nav__link Поддержка
            button(type="button").js-header-search.btn-action.header__btn-search
                svg.u-icon.btn-action__icon
                    use(xlink:href="img/sprite.svg#search")
            form(action="#").header-search.header__search
                input(type="search", name="search", placeholder="Поиск…").input-el.header-search__input
                button(type="button").js-header-search.btn-close.header-search__close
                    svg.u-icon.btn-close__icon
                        use(xlink:href="img/sprite.svg#close")
        a(href="#").btn-action.header__btn-login-mobile
            svg.u-icon.btn-action__icon
                use(xlink:href="img/sprite.svg#login")
        a(href="#").btn.btn-trp.btn--size-lt.header__btn-register Регистрация
        a(href="#").btn.btn-green.btn--size-lt.header__btn-login Вход
    .header-menu-mobile.header__menu-mobile
        .header-menu-mobile__inner
            .header-menu-mobile__nav-list
                ul.header-menu-mobile__nav
                    li.header-menu-mobile__nav-item
                        a(href="#").header-menu-mobile__nav-link О платформе
                    li.header-menu-mobile__nav-item
                        a(href="#").header-menu-mobile__nav-link Проекты
                    li.header-menu-mobile__nav-item
                        a(href="#").header-menu-mobile__nav-link СМИ о нас
                    li.header-menu-mobile__nav-item
                        a(href="#").header-menu-mobile__nav-link Поддержка
            .js-language-select.language-site.header-menu-mobile__language
                .language-site__current
                    .language-site__current-title Русский
                    svg.u-icon.language-site__current-icon
                        use(xlink:href="img/sprite.svg#arrow-down")
                .language-site__dropdown
                    a(href="#").language-site__link English
            .header-menu-mobile__btn-list
                a(href="#").btn.btn-trp.btn--size-md.header-menu-mobile__btn.header-menu-mobile__btn--register Регистрация
                a(href="#").btn.btn-green.btn--size-md.header-menu-mobile__btn.header-menu-mobile__nav-btn--login Вход
    .js-header-menu-mobile.header__overlay-mobile